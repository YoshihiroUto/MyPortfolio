<!-- articles/show.html.erb -->
<h1>Articles#show</h1>
<h3>個別記事ページ</h3>

<div class="container">
  <div class="row mb-3">
    <div class="col-md-2">
      <%= image_tag @article.image_url(:thumb), class: "img-fluid", width: "40px", height: "25px" %>
    </div>
  </div>
    
  <div class="row">
    <div class="col-md-6">
      <h3><%= @article.title %></h3>
      <p><%= @article.content %></p>
    </div>
    
    <div class="col-md-6">
      <h3><%= @article.title %></h3>
      <p><%= @article.content %>のプレビュー表示予定場所</p>
    </div>
  </div>
</div>

