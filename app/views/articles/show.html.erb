<!-- articles/show.html.erb -->
<div class="container m-0">
  <div class="row mb-3">
    <div class="col-md-2">
      <%= image_tag @article.image_url(:thumb), class: "img-fluid", width: "40px", height: "25px" %>
      <a href=<%= edit_article_path(@article) %>><i class="fa fa-edit"></i> 編集</a>
    </div>
    <div class="col-md-10">
      <h3><%= @article.title %></h3>
    </div>
  </div>

  <hr>
  
  <div><%= markdown(@article.content).html_safe %></div>

</div>

