<!-- articles/index.html.erb -->
<div class="container" style="max-width: 1500px;">
  <div class="row">
    <div class="col-md-3">
      
      <li class="border mb-1">
        <%= link_to "All", articles_path %>
      </li>
      
      <% @categories.each do |category| %>
        <li class="border mb-1">
          <%= link_to category.name, articles_path(current_category: category.id) %>
          <%= link_to 'カテゴリ削除', category, class: "btn btn-outline-warning btn-sm", method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %>
        </li>
      <% end %>
      
      <li class="border mb-1 mr-1">
        <%= link_to "未分類", articles_path(current_category: "Unselected") %>
        <%#= link_to "カテゴリ無し", articles_path %>
      </li>
      
    </div>
    
    <div class="col-md-9 article-contents">
      <% @articles.each do |article| %>
        <div class="row border mb-1">
          <div class="col-md-2 eye-catch">
            <%= link_to (image_tag article.image_url(:thumb)), article_path(article)  %>
          </div>
          <div class="col-md-8 mt-1">
            <p>タイトル：<%= article.title %></p>
            <p>最終更新：<%= article.updated_at.to_s(:datetime_jp) %> 記事作成：<%= article.created_at.to_s(:datetime_jp) %></p>
            <p>カテゴリ：
              <% if article.category %>
                <%= article.category.name %>
              <% else %>
                未分類
              <% end %>
            </p>
          </div>
          
          <div class="col-md-2 edit-icon">
            <a href=<%= edit_article_path(article) %>><i class="fa fa-edit"></i> 編集</a>
            <%= link_to article, method: :delete, class: "ml-1", data: { confirm: '本当に削除してよろしいですか?' } do %>
              <i class="fa fa-trash"></i> 削除
            <% end %>
          </div>
          
        </div><!--/row-->
      <% end %>
    </div>
  </div>

</div>